datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Barber {
  availability Boolean?
  bookings     Booking[]
  createdAt    DateTime  @default(now())
  id           String    @id @default(cuid())
  latitude     Float?
  location     String?
  longitude    Float?
  name         String?
  ratings      Int?
  services     String?
  updatedAt    DateTime  @updatedAt
}

model Customer {
  bookings  Booking[]
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  name      String?
  updatedAt DateTime  @updatedAt
}

model Booking {
  barber     Barber?            @relation(fields: [barberId], references: [id])
  barberId   String?
  createdAt  DateTime           @default(now())
  customer   Customer?          @relation(fields: [customerId], references: [id])
  customerId String?
  date       DateTime?
  id         String             @id @default(cuid())
  service    Service?           @relation(fields: [serviceId], references: [id])
  serviceId  String?
  status     EnumBookingStatus?
  time       DateTime?
  updatedAt  DateTime           @updatedAt
}

model Service {
  bookings    Booking[]
  createdAt   DateTime  @default(now())
  description String?
  duration    Int?
  id          String    @id @default(cuid())
  price       Float?
  updatedAt   DateTime  @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

enum EnumBookingStatus {
  Option1
}
